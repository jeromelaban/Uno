<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType Condition="'$(Configuration)'=='Release'">WinExe</OutputType>
		<OutputType Condition="'$(Configuration)'=='Debug'">Exe</OutputType>
		<TargetFramework>netcoreapp3.1</TargetFramework>
	</PropertyGroup>

	<ItemGroup>
		<EmbeddedResource Include="..\XFApp.UWP\Package.appxmanifest" LogicalName="Package.appxmanifest" />
	</ItemGroup>

	<ItemGroup>
		<UpToDateCheckInput Include="..\XFApp.Shared\**\*.xaml" />
	</ItemGroup>

	<ItemGroup>
		<!-- Note that for WebAssembly version 1.1.1 of the console logger required -->
		<PackageReference Include="Microsoft.Extensions.Logging.Console" Version="1.1.1" />
		<PackageReference Include="Microsoft.Extensions.Logging.Filter" Version="1.1.1" />
		<PackageReference Include="Uno.UI.Skia.Gtk" Version="3.1.0-dev.474" />
		<PackageReference Include="Uno.UI.RemoteControl" Version="3.1.0-dev.474" Condition="'$(Configuration)'=='Debug'" />
		<PackageReference Include="Uno.Xamarin.Forms.Platform" Version="4.8.0-uno.1308" />
		<PackageReference Include="Microsoft.Extensions.Logging.Console" Version="1.1.1" />
		<PackageReference Include="Microsoft.Extensions.Logging.Filter" Version="1.1.1" />
	</ItemGroup>

	<ItemGroup>
		<Content Include="..\XFApp.UWP\Assets\*.png" Link="Assets\%(FileName)%(Extension)" />
		<Content Include="..\XFApp.UWP\*.png" Link="%(FileName)%(Extension)" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\XFApp\XFApp.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Compile Include="../XFApp.UWP/*.xaml.cs">
			<DependentUpon>%(FileName)</DependentUpon>
		</Compile>
		<Page Include="../XFApp.UWP/*.xaml" />
	</ItemGroup>
</Project>
